# In main.tf or a separate data.tf
data "aws_ami" "ubuntu_lts" {
  most_recent = true
  filter {
    name   = "name"
    values = ["ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*"]
  }
  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
  owners = ["Canonical's AWS account ID"]
}